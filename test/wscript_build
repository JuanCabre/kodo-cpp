#! /usr/bin/env python
# encoding: utf-8

search_path = []

if not bld.is_mkspec_platform('windows'):
    search_path = ['.']

bld.program(
    features='cxx test',
    source=['kodocpp_tests.cpp'] + bld.path.ant_glob('src/*.cpp'),
    target='kodocpp_tests',
    rpath=search_path,
    use=['kodocpp', 'gtest'])
